{
  "name": "Mark and Learn",
  "description": "Combine creating and practicing a vocabulary in one extension.",
  "version": "0.0.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "/background/background.js"
  },
  "permissions": ["storage", "activeTab", "contextMenus"],
  "action": {
    "default_popup": "/popup/popup.html",
    "defualt_icon": {
      "16": "/images/education-16.png",
      "32": "/images/education-32.png",
      "64": "/images/education-64.png",
      "128": "/images/education-128.png"
    }
  },
  "icons": {
    "16": "/images/education-16.png",
    "32": "/images/education-32.png",
    "64": "/images/education-64.png",
    "128": "/images/education-128.png"
  }
}
